{{#each hikes as |hike|}}
  <div data-id="{{hike.id}}">
    <table class="table table-hover">
      <tr>
        <th>Date</th>
        <th>Hike Name</th>
        <th>City</th>
        <th>State</th>
        <th>Elevation gain</th>
        <th>Miles roundtrip</th>
        <th>Difficulty</th>
        <th>Rating</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>
      <tr>
        <td>{{hike.hike_date}}</td>
        <td>{{hike.hike_name}}</td>
        <td>{{hike.city}}</td>
        <td>{{hike.state}}</td>
        <td>{{hike.elevation_gain}}</td>
        <td>{{hike.miles_rt}}</td>
        <td>{{hike.difficulty}}</td>
        <td>{{hike.rating}}</td>
        <td>{{hike.notes}}</td>
        <!-- link to update and delete each hike in the last column -->
        <td>
          <a class="update-hike-link" data-id="{{hike.id}}" href="#update-hike-modal{{hike.id}}" data-toggle="modal">Update</a><br>
          <a class="delete-hike-link" data-id="{{hike.id}}" href="#">Delete</a>
        </td>
      </tr>
    </table>
  </div>
  <!-- modal to update hike once link is clicked -->
  <div class="modal fade" id="update-hike-modal{{hike.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <!--  removed class="update-hike-modal"-->
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
               <span aria-hidden="true">&times;</span>
             </button>
          <h5 class="update-hike-modal-title">Input the fields you would like to update</h5>
        </div>
